---
import { Icon } from 'astro-icon/components';
const isHomePage = Astro.url.pathname === '/';
---
<header class={`w-full z-20 ${isHomePage ? 'absolute top-50 left-50' : ''}`}>
	<div class="bg-transparent flex h-[130px] items-center">
		<div class="flex-1 flex justify-center items-center">
			<Icon class="text-3xl" name="name" />
		</div>
		<div class="flex-1 flex justify-center items-center">
			<a href="/">
				<Icon class="text-3xl" name="logo" />
			</a>
		</div>
		<div class="flex-1 flex justify-center items-center gap-12">
			<a class="text-black hover:text-gold-100 transition-all duration-500 ease-in-out" href="/Photograph">PORTFOLIO</a>
			<a class="text-black hover:text-gold-100 transition-all duration-500 ease-in-out" href="/Journal">JOURNAL</a>
		</div>
	</div>
</header>
