---
import { Image } from 'astro:assets';
import firstImage from '../assets/first.webp';

const { pictureTitle } = Astro.props;
const photoSizes = '(min-width: 1280px) 220px, (min-width: 768px) 200px, 45vw';
const photos = Array.from({ length: 12 }, () => ({
	src: firstImage,
	alt: 'Slide 1',
}));
---

<div class="flex flex-col gap-4 w-full">
	<h3 id="pictureTitle" class="w-full text-center md:text-left">{pictureTitle}</h3>
	<div class="grid [grid-template-columns:repeat(auto-fit,minmax(140px,1fr))] gap-4 w-full pb-5">
		{photos.map((photo) => (
			<Image
				class="w-full aspect-square object-cover transition duration-500 grayscale hover:grayscale-0"
				src={photo.src}
				alt={photo.alt}
				width={420}
				sizes={photoSizes}
				loading="lazy"
				decoding="async"
			/>
		))}
	</div>
</div>
